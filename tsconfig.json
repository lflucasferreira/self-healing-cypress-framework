{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["cypress", "node"],
    "paths": {
      "@self-healing/*": ["cypress/support/self-healing/*"]
    }
  },
  "include": ["cypress/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

